{{> header}}

<article class="single-page" style="max-width: 900px; margin: 0 auto; padding: 60px 40px;">
  <header class="page-header" style="margin-bottom: 3rem; border-bottom: 2px solid #eee; padding-bottom: 2rem;">
    <h1 style="font-size: 42px; margin-bottom: 1rem; font-weight: 700;">{{page.title}}</h1>
  </header>

  <div class="page-content" style="line-height: 1.8; font-size: 16px; color: #333;">
    {{{page.content}}}
  </div>

  {{#if page.updatedAt}}
    <footer class="page-footer" style="margin-top: 3rem; padding-top: 2rem; border-top: 2px solid #eee; color: #666; font-size: 14px;">
      Last updated: {{page.updatedAt}}
    </footer>
  {{/if}}
</article>

{{> footer}}

