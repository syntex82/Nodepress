{{> header}}
<section class="hero-block" style="background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('https://picsum.photos/1920/800'); background-size: cover; background-position: center; padding: 6rem 0; text-align: center; color: #fff;">
  <div class="container">
    <h1 style="font-size: 3rem; margin-bottom: 1rem; color: #fff;">Welcome to Our Site</h1>
    <p style="font-size: 1.25rem; max-width: 600px; margin: 0 auto 2rem;">Discover amazing content and experiences</p>
    <a href="#" class="btn btn-primary" style="background: #fff; color: #6366F1;">Get Started</a>
  </div>
</section>

<div class="audio-block" style="padding: 2rem; background: var(--color-surface); border-radius: var(--border-radius);">
  <div style="display: flex; align-items: center; gap: 1rem;">
    <img src="https://picsum.photos/200" alt="Track Title" style="width: 80px; height: 80px; border-radius: 8px; object-fit: cover;">
    <div>
      <h4 style="margin: 0 0 0.25rem;">Track Title</h4>
      <p style="margin: 0; color: var(--color-text-muted); font-size: 0.9rem;">Artist Name</p>
    </div>
  </div>
  <audio controls style="width: 100%; margin-top: 1rem;"><source src="/uploads/1765669157410-West Coast Waves.wav" type="audio/mpeg"></audio>
</div>

<section class="gallery-block" style="padding: var(--section-padding) 0;">
  <div class="container">
    <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 1rem;">
      
      <div style="overflow: hidden; border-radius: var(--border-radius);">
        <img src="https://picsum.photos/400/300?1" alt="Image 1" style="width: 100%; aspect-ratio: 4/3; object-fit: cover; transition: transform 0.3s;">
      </div>
      <div style="overflow: hidden; border-radius: var(--border-radius);">
        <img src="https://picsum.photos/400/300?2" alt="Image 2" style="width: 100%; aspect-ratio: 4/3; object-fit: cover; transition: transform 0.3s;">
      </div>
      <div style="overflow: hidden; border-radius: var(--border-radius);">
        <img src="https://picsum.photos/400/300?3" alt="Image 3" style="width: 100%; aspect-ratio: 4/3; object-fit: cover; transition: transform 0.3s;">
      </div>
    </div>
  </div>
</section>

<section class="testimonial-block" style="padding: var(--section-padding) 0; background: var(--color-surface);">
  <div class="container" style="max-width: 800px;">
    <blockquote style="font-size: 1.5rem; font-style: italic; text-align: center; margin-bottom: 2rem; color: var(--color-heading);">"This product has completely transformed how we work. Highly recommended!"</blockquote>
    <div style="display: flex; align-items: center; justify-content: center; gap: 1rem;">
      <img src="https://i.pravatar.cc/100" alt="John Doe" style="width: 60px; height: 60px; border-radius: 50%; object-fit: cover;">
      <div>
        <div style="font-weight: 600;">John Doe</div>
        <div style="color: var(--color-text-muted); font-size: 0.9rem;">CEO, Company Inc.</div>
      </div>
    </div>
  </div>
</section>

<!-- Dynamic content sections -->

{{#if featuredCourses.length}}
<section class="posts-section">
  <div class="container">
    <h2>Featured Courses</h2>
    <div class="posts-grid">
      {{#each featuredCourses}}
      <article class="post-card">
        {{#if featuredImage}}<img src="{{featuredImage}}" alt="{{title}}" class="post-image">{{/if}}
        <div class="post-content">
          <h3><a href="/courses/{{slug}}">{{title}}</a></h3>
          <p>{{shortDescription}}</p>
          <div style="display: flex; justify-content: space-between; align-items: center; margin-top: 0.5rem;">
            <span style="color: var(--color-primary); font-weight: 600;">
              {{#if (eq priceType 'FREE')}}Free{{else}}${{priceAmount}}{{/if}}
            </span>
            <span style="font-size: 0.85rem; color: var(--color-text-muted);">{{level}}</span>
          </div>
          <a href="/courses/{{slug}}" class="btn btn-sm btn-primary" style="margin-top: 0.75rem;">Enroll Now</a>
        </div>
      </article>
      {{/each}}
    </div>
    <div style="text-align: center; margin-top: 2rem;">
      <a href="/courses" class="btn btn-outline">View All Courses</a>
    </div>
  </div>
</section>
{{/if}}

{{#if featuredProducts.length}}
<section class="posts-section">
  <div class="container">
    <h2>Featured Products</h2>
    <div class="posts-grid">
      {{#each featuredProducts}}
      <article class="post-card">
        {{#if images.[0]}}<img src="{{images.[0]}}" alt="{{name}}" class="post-image">{{/if}}
        <div class="post-content">
          <h3><a href="/shop/product/{{slug}}">{{name}}</a></h3>
          <p style="color: var(--color-primary); font-weight: 600;">{{#if salePrice}}<s style="color: var(--color-text-muted);">${{price}}</s> ${{salePrice}}{{else}}${{price}}{{/if}}</p>
        </div>
      </article>
      {{/each}}
    </div>
    <div style="text-align: center; margin-top: 2rem;">
      <a href="/shop" class="btn btn-outline">View All Products</a>
    </div>
  </div>
</section>
{{/if}}

<section class="posts-section">
  <div class="container">
    <h2>Latest Posts</h2>
    <div class="posts-grid">
      {{#each posts}}
      <article class="post-card">
        {{#if this.featuredImage}}<img src="{{this.featuredImage}}" alt="{{this.title}}" class="post-image">{{/if}}
        <div class="post-content">
          <h3><a href="/post/{{this.slug}}">{{this.title}}</a></h3>
          <p>{{this.excerpt}}</p>
        </div>
      </article>
      {{/each}}
    </div>
  </div>
</section>
{{> footer}}